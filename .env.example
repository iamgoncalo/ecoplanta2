# EcoContainer + Planta Smart Homes Platform
# Copy to .env and adjust values

# Database
DATABASE_URL=postgresql+asyncpg://ecoplanta:ecoplanta@localhost:5432/ecoplanta
DATABASE_URL_SYNC=postgresql://ecoplanta:ecoplanta@localhost:5432/ecoplanta
POSTGRES_USER=ecoplanta
POSTGRES_PASSWORD=ecoplanta
POSTGRES_DB=ecoplanta

# Redis
REDIS_URL=redis://localhost:6379/0

# Auth (dev mode)
AUTH_SECRET_KEY=dev-secret-key-change-in-production
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Data seed
SEED=42

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_CORS_ORIGINS=["http://localhost:5173"]

# Frontend
VITE_API_URL=http://localhost:8000

# Observability
LOG_LEVEL=INFO
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
